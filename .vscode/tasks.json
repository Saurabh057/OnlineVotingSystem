{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++ ${workspaceFolder}/*.cpp -o main  -pthread -g -l sqlite3",
      // "args": ["${fileDirname}/*.cpp", "-g", "-pthread", "-l", "sqlite3"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
